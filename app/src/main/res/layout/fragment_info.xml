<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.InfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:id="@+id/layout_toolbar"
                android:layout_height="60dp">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_marginHorizontal="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/shape_header"
                    android:minHeight="?attr/actionBarSize">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="48dp"
                        android:layout_marginRight="7dp"
                        android:background="@drawable/shape_bulat"
                        android:src="@drawable/logoproject" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:src="@drawable/agri_ics" />



                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.AppBarLayout>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:src="@drawable/about_us"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="9dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:text="This project is the development of a greenhouse monitoring system using a mobile application based on data received from the Intelligence Control System."
                android:textSize="17dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="250dp"
                android:background="@color/birutua" />

            <ImageView
                android:layout_width="180dp"
                android:layout_height="25dp"
                android:src="@drawable/prof_team"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="3dp">

                        <ImageView
                            android:layout_width="115dp"
                            android:layout_height="115dp"
                            android:src="@drawable/iv_ade"
                            android:layout_gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:text="Kgs M Ade Iqbal R"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginTop="0dp"
                            android:layout_marginLeft="00dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:text="Mobile App"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="0dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="8dp">

                        <ImageView
                            android:layout_width="115dp"
                            android:layout_height="115dp"
                            android:src="@drawable/iv_herly"
                            android:layout_gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:text="M. Herly Pratama"
                            android:textStyle="bold"
                            android:layout_marginTop="0dp"
                            android:layout_marginLeft="0dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13dp"
                            android:text="Intelligence"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="0dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13dp"
                            android:text="Control System"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="0dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="0dp">

                        <ImageView
                            android:layout_width="115dp"
                            android:layout_height="115dp"
                            android:src="@drawable/iv_aul"
                            android:layout_gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
