<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.NutrientFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/layout_toolbar"
        android:layout_height="60dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_marginHorizontal="0dp"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/shape_header"
            android:minHeight="?attr/actionBarSize">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:layout_marginRight="7dp"
                android:background="@drawable/shape_bulat"
                android:src="@drawable/logoproject"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:src="@drawable/agri_ics" />

        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:src="@drawable/nutrient_tank"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="70dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="418dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="105dp"
        android:background="@drawable/shape_biru">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="27dp"
        android:layout_marginTop="125dp"
        android:background="@drawable/shape_biru3">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="76dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_biru4">

            <ImageView
                android:layout_marginVertical="6dp"
                android:layout_marginHorizontal="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/iv_date_time" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp"
                android:text="Date Time"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tv_time_stamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="27dp"
        android:layout_marginTop="225dp"
        android:background="@drawable/shape_biru3">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="76dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_biru4">

            <ImageView
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/iv_ph" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp"
                android:text="pH"
                android:textColor="@color/black"
                android:textSize="21dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_ph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="1dp"
                android:baselineAligned="false"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="27dp"
        android:layout_marginTop="325dp"
        android:background="@drawable/shape_biru3">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="76dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_biru4">

            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="1dp"
                android:layout_marginVertical="1dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/iv_tds" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp"
                android:text="TDS"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_tds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="27dp"
        android:layout_marginTop="425dp"
        android:background="@drawable/shape_biru3">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="76dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_biru4">

            <ImageView
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="1dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/iv_water_temperature" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp"
                android:text="Water Temperature"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tv_water_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>