<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shape with vertical gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/white"
                android:endColor="@color/biruremaja"
                android:angle="90" /> <!-- Sudut gradient: 90 untuk vertikal -->

            <!-- Optional: Corner radius -->
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Stroke around the shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Background color -->
            <stroke
                android:width="2dp"
                android:color="@color/black" /> <!-- Stroke color and width -->

            <!-- Optional: Corner radius -->
            <corners android:radius="20dp" />
        </shape>
    </item>

</layer-list>